"Shortcuts --------------------------------------------------------------------
let mapleader=","
"Shortcuts :: Plugin
noremap <F2> :NERDTreeToggle<CR> :vertical resize 50<CR>
noremap <F3> :TagbarToggle<CR>
func! s:CCTreeLoad()
    " Smart cscope database loader
    if filereadable('cscope.xref')
        :CCTreeLoadXRefDB cscope.xref
    elseif filereadable('cscope.out')
        :CCTreeLoadDB cscope.out
        :CCTreeSaveXRefDB cscope.xref
    else
        let l:errmsg = 'CCTree: cscope database is not found. aborting'
        echohl WarningMsg | echo l:errmsg  | echohl None
    endif
endfunc
nnoremap <silent> <F4> :call <SID>CCTreeLoad()<CR>

nnoremap <C-e> :Buffers<CR>
nnoremap <S-e> :Files<CR>

nnoremap <leader>q :YcmCompleter GetDoc<CR>
nnoremap <leader>f :YcmCompleter FixIt<CR>
